<Page
    x:Class="CharpHat.WinPhone.Pages.CameraPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:CharpHat.WinPhone.Pages"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
    <Grid>
        <Grid>
            <CaptureElement x:Name="previewElement" Stretch="UniformToFill" />
        </Grid>
        <Grid VerticalAlignment="Bottom" Height="120">
            <Button BorderBrush="Transparent"  x:Name="saveButton"  
                    Click="SaveButton_Click" VerticalAlignment="Center" HorizontalAlignment="Center" Height="120" Width="67" Margin="145,-59,146,0">
                <Button.Background>
                    <ImageBrush ImageSource="ms-appx:///TakePhotoButton.png"></ImageBrush>
                </Button.Background>
            </Button>
        </Grid>

    </Grid>

</Page>
